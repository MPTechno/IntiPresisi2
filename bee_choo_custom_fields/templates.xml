<openerp>
    <data>
        <record model="ir.ui.view" id="bee_choo_product_template_form_view">
            <field name="name">product.template.common.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml"> 
                <xpath expr="//form/sheet/notebook/page[@string='Information']/group/group" position="inside">        
                    <field name="hs_code"/>
                    <field name="country_of_origin"/>
                </xpath> 
<!--
                <field name="default_code" position="replace">
                    <field name="default_code" string="Code"/>
                </field> -->

                <xpath expr="/form/sheet/notebook/page[@string='Information']/group/group[2]" position="inside">        
                    <field name="notification_no"/>
                    <field name="optimum_no"/>
                </xpath> 
                <field name="uom_id" position="after">
                    <field name="packing_size"/>
                </field>
            </field> 
        </record>

        <record model="ir.ui.view" id="bee_choo_account_invoice_form_view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@string='Other Info']/group/group[2]/field[@name='name']" position="attributes">
                    <attribute name="string">Reference/Reason</attribute>
                </xpath>
            </field>
        </record>

         <record model="ir.ui.view" id="bee_choo_account_invoice_tree_view">
            <field name="name">account.invoice.tree</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree"/>
            <field name="arch" type="xml">
                <field name="origin" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="origin" position="after">
                    <field name="invoice_default_number"/>
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="bee_choo_vpicktree">
            <field name="name">stock.picking.tree.beechoo</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="origin" position="after">
                    <field name="invoice_default_number"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="bee_choo_account_invoice_form_view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <field name="origin" position="attributes">
                    <attribute name="invisible">True</attribute>
                </field>
                <field name="date_due" position="replace">
                </field>
                <field name="account_id" position="after">
                    <field name="invoice_default_number" string="Sale Invoice Number"/>
                </field>
                <field name="date_invoice" position="after">
                    <field name="schedule_new_date"/>
                </field>

            </field>
        </record>

        <record model="ir.ui.view" id="bee_choo_purchase_order_form_view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml"> 
                <field name="partner_ref" position="after">
                    <!--<field name="attention"/>
                    <field name="attn_tel"/>-->
                    <field name="attn_email"/>
                    <!--<field name="prepared_by"/>-->
                </field>
                <field name="currency_id" position="attributes">
                    <attribute name="groups">base.group_user</attribute>
                </field>
            </field> 
        </record>

<!--         <record model="ir.ui.view" id="bee_choo_picking_form_view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml"> 
                <field name="date" position="after">
                    <field name="schedule_new_date"/>
                </field>
                <xpath expr="//field[@name='min_date']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>
            </field> 
        </record> -->


        <record model="ir.ui.view" id="bee_choo_order_form_view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml"> 
                <field name="currency_id" position="after">
                    <!--<field name="attention"/>
                    <field name="attn_tel"/>-->
                </field>
                <field name="date_order" position="after">
                    <field name="schedule_new_date"></field>
                </field>
            </field> 
        </record>

        <record model="ir.ui.view" id="bee_choo_currency_form_view">
            <field name="name">currency.form</field>
            <field name="model">res.currency</field>
            <field name="inherit_id" ref="base.view_currency_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="spelling"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="res_partner_form_inherit">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="attention"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
