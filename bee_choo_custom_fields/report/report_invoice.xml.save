<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="account.report_invoice_document">
            <xpath expr="//t[@t-call='report.external_layout']" position="replace">
                <t t-call="bee_choo_custom_fields.external_invoicelayout_custom">
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
                    <div class="page">
                        <br />
                        <div style="text-align:center;background-color: black;color:white;">
                            <h3 style="font-weight:700;">
                                <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')"> TAX Invoice</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'proforma2'">PRO-FORMA</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                <span t-if="o.type == 'out_refund'">Refund</span>
                                <span t-if="o.type == 'in_refund'">Supplier Refund</span>
                                <span t-if="o.type == 'in_invoice'">Supplier Invoice</span>
                            </h3>
                        </div>
                        <div class="row">
                            <div class="col-xs-6">
                                <strong>Bill To :</strong>
                                <div>
                                    <address t-field="o.partner_id" t-field-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}" />
                                    <span t-if="o.partner_id.vat">TIN: <span t-field="o.partner_id.vat" /></span>
                                </div>
                            </div>
                            <div class="col-xs-2"></div>
                            <div class="col-xs-4 pull-right">
                                <table>
                                    <tr>
                                        <th>Invoice No</th>
                                        <td>
                                            : <span t-field="o.number" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Date</th>
                                        <td>
                                            : <span t-field="o.date_invoice" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Page No</th>
                                        <td>
                                            :           
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Payment Term</th>
                                        <td>
                                            : <span t-field="o.payment_term.note" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Currency</th>
                                        <td>
                                            : <span t-field="o.currency_id.name" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div style="height:475px;overflow-y:hidden;border:1px solid black;">
                            <table border="1" class="table1 table-condensed" style="table-layout: fixed; width:100%; height: 475px;">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="width:6%;border-right:1px solid black;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">S/N</th>
                                        <th class="text-center" style="width:15%;border-right:1px solid black;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">CODE</th>
                                        <th class="text-center" style="width:33%;border-right:1px solid black;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">DESCRIPTION</th>
                                        <th class="text-center" style="width:10%;border-right:1px solid black;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">QTY</th>
                                        <th class="text-center" style="width:10%;border-right:1px solid black;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">UOM</th>
                                        <th class="text-center" style="width:14%;border-right:1px solid black;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">UNIT PRICE</th>
                                        <th class="text-center" style="width:12%;font-size: 15px;vertical-align:middle;border-bottom:1px solid black;">AMT($)</th>
                                    </tr>
                                </thead>
                                <tbody class="invoice_tbody">
                                    <t t-set="i" t-value="0" />
                                    <tr t-foreach="o.invoice_line" t-as="l">
                                        <t t-set="i" t-value="i+1" />
                                        <td class="text-center" style="width:6%; border-right:1px solid black;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-esc="i" />
                                        </td>
                                        <td class="text-center" style="width:15%;border-right:1px solid black;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-field="l.product_id.default_code" />
                                        </td>
                                        <td class="text-center" style="width:33%;border-right:1px solid black;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-field="l.product_id.name" />
                                        </td>
                                        <td class="text-center" style="width:10%;border-right:1px solid black;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-field="l.quantity" />
                                        </td>
                                        <td class="text-center" style="width:10%;border-right:1px solid black;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-field="l.uos_id" />
                                        </td>
                                        <td class="text-center" style="width:14%;border-right:1px solid black;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-field="l.price_unit" />
                                        </td>
                                        <td class="text-center" style="width:12%;vertical-align:bottom;padding-bottom: 1em;">
                                            <span t-field="l.price_subtotal" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
                                        </td>
                                    </tr>
                                    <tr style="height: 475px;">
                                        <td style="border-right:1px solid black;padding-bottom: 20em;"></td>
                                        <td style="border-right:1px solid black;padding-bottom: 20em;"></td>
                                        <td style="border-right:1px solid black;padding-right:5px;padding-left:5px;padding-bottom: 20em;"></td>
                                        <td style="border-right:1px solid black;padding-bottom: 20em;"></td>
                                        <td class="text-center" style="border-right:1px solid black;padding-right:5px;padding-left:5px;padding-bottom: 20em;"></td>
                                        <td class="text-center" style="border-right:1px solid black;padding-right:5px;padding-left:5px;padding-bottom: 20em;"></td>
                                        <td class="text-center" style="padding-right:5px;padding-left:5px;padding-bottom: 20em;"></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <table class="table1 table-condensed" style="table-layout: fixed;">
                                    <div style="margin-top:5px; margin-left:4px;">
                                        <strong> Bank Details :</strong>
                                    </div>
                                    <tr>
                                        <td>Beneficiary Bank :</td>
                                        <td class="text-left">
                                Development Bank of Singapore
                            </td>
                                    </tr>
                                    <tr>
                                        <td>Beneficiary Address :</td>
                                        <td class="text-left">
                                Hougang Branch(023)
                            </td>
                                    </tr>
                                    <tr>
                                        <td>Beneficiary Account No:</td>
                                        <td class="text-left">
                                 0239045618

                            </td>
                                    </tr>
                                    <tr>
                                        <td>Beneficiary Bank Swift Code :</td>
                                        <td class="text-left">
                                DBSSSGSG

                            </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-4 pull-right">
                               
                                <table class="table1 table-condensed" style="width:100%;padding-left:50px;">
                                    <tr>
                                        <td>
                                            <strong>Sub Total</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Add 7% GST<!-- <span t-field="t.name"/> --></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_tax" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
                                        </td>
                                    </tr>
                                    <tr class="border-black">
                                        <td>
                                            <strong>Total Inc GST</strong>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="o.amount_total" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>
    </data>
</openerp>
