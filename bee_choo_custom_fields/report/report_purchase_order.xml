<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="purchase.report_purchaseorder_document">
            <xpath expr="//t[@t-call='report.external_layout']" position="replace">
                <t t-call="bee_choo_custom_fields.external_purchase_order_layout">
                    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
                   <div class="page">
                        <strong><hr style="border:0.5px solid black;" size="5"></hr></strong>
                        <div style="text-align:center;font-size: 20px;border-top:1px solid black;border-bottom:1px solid black;">
                            <strong>PURCHASE ORDER</strong>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 pull-left">
                                <table class="table1 table-condensed" column="6"
                                       style=" width:100%;  max-height: 250px;">
                                    <tr style=" max-height: 50px;">
                                        <td colspan="6" style="font-size: 12px">
                                            <strong>ORIGIN HERBAL HAIR TREATMENT SDN BHD</strong>
                                            <p>12A-B JALAN TECKNOLOGY 3/5 SUNRISE</p>
                                            <p>TECHNOLOGY CENTRE KOTA DAMANSARA</p>
                                            <p>PETALING JAYA 47810 MALAYSIA</p>
                                        </td>
                                    </tr>
                                    <tr style="font-size:12px;">
                                        <td align="left" colspan="2" style="font-size: 12px; display: inline-block !important; white-space: nowrap;">
                                            <span><strong>ATTENTION</strong></span>
                                            :
                                            <span t-field="o.partner_id.attention" style="margin-left:2px"></span>
                                        </td>

                                        <td align="left" colspan="2" style="font-size: 12px; white-space: nowrap;">
                                            <span><strong>TEL</strong></span>
                                            :
                                            <span t-field="o.partner_id.phone"></span>
                                        </td>
                                        <td colspan="2"></td>
                                    </tr>

                                    <tr style="font-size:12px;">
                                        <td align="left" colspan="2" style="font-size: 12px; display: inline-block !important; white-space: nowrap;">
                                            <span><strong>EMAIL</strong></span>
                                            :
                                            <span t-field="o.attn_email" style="margin-left:2px"></span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-xs-6 pull-right">
                                <table class="table1 table-condensed" column="6"
                                       style="width:100%;  max-height: 250px; font-size: 12px">
                                    <tr>
                                        <th>PURCHASE ORDER NO</th>
                                        <td>
                                            :
                                            <span t-field="o.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>PURCHASE ORDER DATE</th>
                                        <td>
                                            :
                                            <span t-field="o.date_order" t-field-options='{"format": "dd/MM/y"}'/>
                                        </td>
                                    </tr>
<!--                                     <tr>
                                        <th>DELIVERY ORDER NO.</th>
                                        <td>
                                            :
                                            <span t-field="o.name"/>
                                        </td>
                                    </tr> -->
                                    <tr>
                                        <th>TERM OF PAYMENT</th>
                                        <td>
                                            :
                                            <span t-field="o.payment_term_id"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>CURRENCY</th>
                                        <td>
                                            :
                                            <span t-field="o.currency_id.name"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div>
                            <table border="1" class="table1 table-condensed"
                                   style="table-layout: fixed; width:100%; border-top:1px solid black;">
                                <thead>
                                    <tr>
                                        <th class="text-left"
                                            style="width:5% ;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            S/N
                                        </th>
                                        <th class="text-center"
                                            style="width:9%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            CODE
                                        </th>
                                        <th class="text-center"
                                            style="width:26%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            DESCRIPTION
                                        </th>
                                        <th class="text-center"
                                            style="width:11%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            ETA
                                        </th>
                                        <th class="text-center"
                                            style="width:15%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            QTY
                                        </th>
                                        <th class="text-center"
                                            style="width:7%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            UOM
                                        </th>
                                        <th class="text-center"
                                            style="width:12%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            UNIT PRICE
                                        </th>
                                        <th class="text-right"
                                            style="width:15%;font-size: 12px;vertical-align:middle;border-bottom:1px solid black;">
                                            AMOUNT
                                        </th>
                                    </tr>
                                </thead>
                                 <tbody class="invoice_tbody">
                                    <t t-set="i" t-value="0"/>
                                    <tr t-foreach="o.order_line" t-as="line">
                                        <t t-set="i" t-value="i+1"/>

                                        <td class="text-left"
                                            style="width:5%;vertical-align:top;font-size: 12px;">
                                            <span t-esc="i"/>
                                        </td>
                                        <td class="text-center"
                                            style="width:9%;vertical-align:top;font-size: 12px;">
                                            <span t-field="line.product_id.default_code"/>
                                        </td>
                                        <td class="text-center"
                                            style="width:26%;vertical-align:top;font-size: 12px;">
                                            <span t-field="line.product_id.name"/>
                                        </td>
                                        <td class="text-center"
                                            style="width:11%;vertical-align:top;font-size: 12px;">
                                            <span t-field="line.date_planned"/>
                                        </td>
                                        <td class="text-center"
                                            style="width:15%;vertical-align:top;font-size: 12px;">
                                            <!--<span t-field="line.product_qty"/>-->
                                            <span t-esc="'{0:,.2f}'.format(float(line.product_qty))"/>
                                        </td>
                                        <td class="text-center"
                                            style="width:7%;vertical-align:top;font-size: 12px;">
                                            <span t-field="line.product_uom.name"/>
                                        </td>
                                        <td class="text-center"
                                            style="width:12%;vertical-align:top;font-size: 12px;">
                                            <span t-esc="o.currency_id.symbol or ''"/><span t-esc="'{0:,.2f}'.format(float(line.price_unit))"/>
                                        </td>
                                        <td class="text-right"
                                            style="width:15%;vertical-align:top;font-size: 12px;">
                                            <span t-esc="o.currency_id.symbol or ''"/><span t-esc="'{0:,.2f}'.format(float(line.price_subtotal))"/>
                                        </td>

                                    </tr>
                                </tbody>
                            </table>
                        </div>


                    </div>

                </t>
            </xpath>
        </template>
    </data>
</openerp>
