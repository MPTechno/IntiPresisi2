from openerp.osv import osv
from openerp.osv import fields
from openerp.addons.decimal_precision import decimal_precision as dp
from networkx import nx
import re
import logging
from openerp import api

_logger = logging.getLogger(__name__)


class sale_order_tour(osv.osv):
    _inherit = 'sale.order.tour'

    @api.multi
    def save(self):
        for rec in self:
            rec.sale_order_id.on_change_tour_ids()
        return True
        #return {'type': 'ir.actions.act_window_close'}
       #return {
       #    'type': 'ir.actions.client',
       #    'name': 'Sales Order',
       #    'res_model': 'sale.order',
       #    'res_id': self.sale_order_id.id,
       #    'view_type': 'form',
       #    'view_mode': 'form',
       #    'tag': 'reload',
       #}

    def showmaps(self, cr, uid, ids, context):
        view_ref = self.pool.get('ir.model.data').get_object_reference(cr, uid, 'route_with_map', 'view_sale_order_tour_map')
        view_id = view_ref and view_ref[1] or False,
        return {
        'type': 'ir.actions.act_window',
        'name': 'Sales Order',
        'res_model': 'sale.order.tour',
        'res_id': ids[0],
        'view_id': view_id,
        'view_type': 'form',
        'view_mode': 'form',
        'target': 'new',
        'nodestroy': True,
        }

